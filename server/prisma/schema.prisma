generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  player   Player?
}

model Player {
  id               Int          @id @default(autoincrement())
  username         String
  user             User         @relation(fields: [userId], references: [id])
  userId           Int          @unique
  rating           Int
  playerOneMatches Match[]      @relation("playerOne")
  playerTwoMatches Match[]      @relation("playerTwo")
  tournaments      Tournament[]
}

model Match {
  id              Int         @id @default(autoincrement())
  playerOne       Player      @relation("playerOne", fields: [playerOneId], references: [id])
  playerOneId     Int
  playerTwo       Player      @relation("playerTwo", fields: [playerTwoId], references: [id])
  playerTwoId     Int
  time            DateTime
  tournament      Tournament? @relation(fields: [tournamentId], references: [id])
  tournamentId    Int?
  tournamentRound String
  vods            String[]
}

model Tournament {
  id           Int      @id @default(autoincrement())
  name         String
  prizepool    Int?
  totalPlayers Int
  tier         String //tier can only range from 1 to 3
  status       String
  startingDate DateTime
  players      Player[]
  matches      Match[]
}
